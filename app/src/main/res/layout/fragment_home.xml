<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F4F4"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:background="@drawable/lingkaran"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="102dp"
        android:id="@+id/RM"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/RiceMills_tittle"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RM"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="@string/Home"
        android:textColor="@color/colorDark"
        android:textSize="30dp"
        app:layout_constraintVertical_bias="0.095" />


    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="50dp"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRowBtn1"
            android:layout_width="424dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txa"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_Pemasokan"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:background="@drawable/kotak"
                android:drawableTop="@drawable/pemasokan"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:text="Pemasokan"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txb"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_penggilingan"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:background="@drawable/kotak"
                android:drawableTop="@drawable/penggilingan"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:text="Penggilingan"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txc"
                android:padding="2dp"
                android:text=""></TextView>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginTop="50dp"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRowBtn2"
            android:layout_width="443dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txd"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_Penjualan"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:background="@drawable/kotak"
                android:drawableTop="@drawable/penjualan"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:text="Penjualan"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txe"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_view"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:background="@drawable/kotak"
                android:drawableTop="@drawable/view"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:text="View Data"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txf"
                android:padding="2dp"
                android:text=""></TextView>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout2"
        android:layout_marginTop="50dp"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRowBtn3"
            android:layout_width="445dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txg"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_stock"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:background="@drawable/kotak"
                android:drawableTop="@drawable/stock"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:text="Stock"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txh"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_grafik"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:background="@drawable/kotak"
                android:drawableTop="@drawable/grafik"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:text="Grafik"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txi"
                android:padding="2dp"
                android:text=""></TextView>

        </TableRow>

    </TableLayout>

</RelativeLayout>